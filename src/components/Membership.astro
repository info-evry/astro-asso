---
const benefits = [
  'Acces aux ressources exclusives',
  'Tarifs reduits sur les evenements',
  'Reseau d\'entraide entre etudiants',
  'Opportunites de projets collaboratifs',
  'Visibilite aupres des entreprises partenaires'
];
---

<section id="membership" class="section membership">
  <div class="container">
    <div class="membership-card" data-animate>
      <div class="membership-bg">
        <div class="membership-orb orb-1"></div>
        <div class="membership-orb orb-2"></div>
      </div>

      <div class="membership-content">
        <span class="section-label">Adhesion</span>
        <h2 class="membership-title">Rejoignez l'association</h2>
        <p class="membership-description">
          Devenez membre de l'Association Info Evry et beneficiez de tous
          les avantages de notre communaute etudiante.
        </p>

        <ul class="benefits-list">
          {benefits.map(benefit => (
            <li class="benefit-item">
              <svg class="benefit-check" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <path d="M16.667 5L7.5 14.167L3.333 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <span>{benefit}</span>
            </li>
          ))}
        </ul>

        <div class="membership-actions">
          <a href="https://asso.info-evry.fr/inscriptions" class="btn btn-primary btn-lg" target="_blank" rel="noopener noreferrer">
            Devenir membre
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M5 10H15M15 10L10 5M15 10L10 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </a>
          <span class="membership-note">Inscription gratuite pour tous les etudiants</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .membership {
    position: relative;
  }

  .membership-card {
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-xl);
    padding: var(--space-16);
    overflow: hidden;
    text-align: center;
  }

  .membership-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }

  .membership-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.5;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: rgba(139, 92, 246, 0.3);
    top: -150px;
    left: -100px;
    animation: float 20s ease-in-out infinite;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: rgba(217, 70, 239, 0.25);
    bottom: -100px;
    right: -50px;
    animation: float 20s ease-in-out infinite reverse;
  }

  .membership-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
  }

  .membership-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .membership-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
  }

  .benefits-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-10);
    text-align: left;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
  }

  .benefit-check {
    color: var(--color-green);
    flex-shrink: 0;
  }

  .membership-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .membership-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .membership-card {
      padding: var(--space-10) var(--space-6);
    }

    .membership-title {
      font-size: var(--text-3xl);
    }

    .benefits-list {
      padding: 0 var(--space-4);
    }
  }
</style>
