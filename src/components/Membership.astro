---
import associationInfo from '../../knowledge/src/association/info.json';

const benefits = associationInfo.membership.benefits;
---

<section id="rejoindre" class="section enroll">
  <div class="container">
    <div class="enroll-card">
      <div class="enroll-bg">
        <div class="enroll-orb orb-1"></div>
        <div class="enroll-orb orb-2"></div>
      </div>

      <div class="enroll-content">
        <span class="section-label">Adhésion</span>
        <h2 class="enroll-title">Rejoindre {associationInfo.name}</h2>
        <p class="enroll-description">
          Devenez membre de l'{associationInfo.fullName} et accédez
          à toutes les ressources de la communauté étudiante.
        </p>

        <ul class="benefits-list">
          {benefits.map(benefit => (
            <li class="benefit-item">
              <span class="benefit-check"><span class="sfs sfs-sm" data-sfs="@sfs:checkmark@" aria-hidden="true"></span></span>
              <span>{benefit}</span>
            </li>
          ))}
        </ul>

        <div class="enroll-actions">
          <div class="enroll-buttons">
            <a href="/adhesion" class="btn btn-primary btn-lg">
              S'inscrire
            </a>
            <a href={`mailto:${associationInfo.contact.assoEmail}?subject=Adhésion%20-%20Question`} class="btn btn-secondary btn-lg">
              <span class="sfs sfs-md" data-sfs="@sfs:envelope.fill@" aria-hidden="true"></span>
              Nous contacter
            </a>
          </div>
          <span class="enroll-note">Gratuit pour tous les étudiants</span>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .enroll {
    position: relative;
  }

  .enroll-card {
    position: relative;
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-xl);
    padding: var(--space-16);
    overflow: hidden;
    text-align: center;
  }

  .enroll-bg {
    position: absolute;
    inset: 0;
    overflow: hidden;
    z-index: 0;
  }

  .enroll-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    opacity: 0.4;
  }

  .orb-1 {
    width: 400px;
    height: 400px;
    background: color-mix(in srgb, var(--color-primary) 40%, transparent);
    top: -150px;
    left: -100px;
    animation: float 20s ease-in-out infinite;
  }

  .orb-2 {
    width: 300px;
    height: 300px;
    background: color-mix(in srgb, var(--color-purple) 35%, transparent);
    bottom: -100px;
    right: -50px;
    animation: float 20s ease-in-out infinite reverse;
  }

  .enroll-content {
    position: relative;
    z-index: 1;
    max-width: 600px;
    margin: 0 auto;
  }

  .enroll-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
  }

  .enroll-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
  }

  .benefits-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    margin-bottom: var(--space-10);
    text-align: left;
    max-width: 400px;
    margin-left: auto;
    margin-right: auto;
  }

  .benefit-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
  }

  .benefit-check {
    color: var(--color-primary);
    flex-shrink: 0;
  }

  .enroll-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .enroll-buttons {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
    justify-content: center;
  }

  .enroll-buttons .btn svg {
    flex-shrink: 0;
  }

  .enroll-note {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .enroll-card {
      padding: var(--space-10) var(--space-6);
    }

    .enroll-title {
      font-size: var(--text-3xl);
    }

    .benefits-list {
      padding: 0 var(--space-4);
    }
  }
</style>
