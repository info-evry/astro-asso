---
import ndiEvent from '../../knowledge/src/ndi/event.json';
import SFSymbol from '../../design/src/components/SFSymbol.astro';
---

<section id="ndi" class="section ndi">
  <div class="container">
    <div class="ndi-wrapper">
      <div class="ndi-content">
        <span class="section-label">Événement annuel</span>
        <h2 class="ndi-title">{ndiEvent.name}</h2>
        <p class="ndi-description">
          {ndiEvent.description}
        </p>

        <div class="ndi-features">
          <div class="feature-item">
            <div class="feature-icon">
              <SFSymbol name="clock.fill" size="lg" />
            </div>
            <div class="feature-text">
              <span class="feature-title">Durée : {ndiEvent.dates.duration}</span>
              <span class="feature-desc">{ndiEvent.dates.durationLabel}</span>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <SFSymbol name="person.2.fill" size="lg" />
            </div>
            <div class="feature-text">
              <span class="feature-title">Équipes pluridisciplinaires</span>
              <span class="feature-desc">Développeurs, designers, marketeurs</span>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <SFSymbol name="star.fill" size="lg" />
            </div>
            <div class="feature-text">
              <span class="feature-title">Défis entreprises</span>
              <span class="feature-desc">Challenges proposés par des partenaires</span>
            </div>
          </div>

          <div class="feature-item">
            <div class="feature-icon">
              <SFSymbol name="calendar" size="lg" />
            </div>
            <div class="feature-text">
              <span class="feature-title">Premier jeudi de décembre</span>
              <span class="feature-desc">Rendez-vous annuel national</span>
            </div>
          </div>
        </div>

        <a href="/nuit-de-linfo" class="btn btn-primary">
          Inscription Nuit de l'Info
        </a>
      </div>

      <div class="ndi-visual">
        <div class="visual-card">
          <div class="visual-glow"></div>
          <div class="visual-content">
            <div class="code-window">
              <div class="code-header">
                <span class="code-dot red"></span>
                <span class="code-dot yellow"></span>
                <span class="code-dot green"></span>
                <span class="code-title">nuit-de-linfo.js</span>
              </div>
              <div class="code-body">
                <pre><code><span class="code-keyword">const</span> <span class="code-var">ndi</span> = &#123;
  <span class="code-prop">edition</span>: <span class="code-string">"{ndiEvent.edition}"</span>,
  <span class="code-prop">durée</span>: <span class="code-string">"{ndiEvent.dates.duration}"</span>,
  <span class="code-prop">équipes</span>: <span class="code-string">"{ndiEvent.stats.teams2024}+"</span>,
  <span class="code-prop">sites</span>: <span class="code-string">"{ndiEvent.stats.sites2024}"</span>
&#125;;

<span class="code-keyword">function</span> <span class="code-func">participer</span>() &#123;
  <span class="code-keyword">return</span> <span class="code-string">"Une nuit mémorable !"</span>;
&#125;</code></pre>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .ndi {
    position: relative;
    overflow: hidden;
  }

  .ndi::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 50%;
    height: 100%;
    background: radial-gradient(circle at 70% 50%, rgba(0, 27, 165, 0.1) 0%, transparent 60%);
    pointer-events: none;
  }

  .ndi-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  .ndi-title {
    font-size: var(--text-4xl);
    margin-bottom: var(--space-4);
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .ndi-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-8);
    line-height: var(--leading-relaxed);
  }

  .ndi-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
    margin-bottom: var(--space-8);
  }

  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
    padding: var(--space-4);
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
  }

  .feature-item:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: var(--border-default);
  }

  .feature-icon {
    color: var(--color-primary);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .feature-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .feature-title {
    font-weight: 600;
    font-size: var(--text-sm);
    color: var(--color-text);
  }

  .feature-desc {
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* Visual */
  .ndi-visual {
    position: relative;
    display: flex;
    justify-content: center;
  }

  .visual-card {
    position: relative;
    width: 100%;
    max-width: 480px;
  }

  .visual-glow {
    position: absolute;
    inset: -20px;
    background: radial-gradient(circle at center, rgba(0, 27, 165, 0.2) 0%, transparent 70%);
    filter: blur(40px);
    z-index: 0;
  }

  .visual-content {
    position: relative;
    z-index: 1;
  }

  .code-window {
    background: var(--color-surface);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-xl);
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    background: rgba(255, 255, 255, 0.02);
    border-bottom: 1px solid var(--border-subtle);
  }

  .code-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .code-dot.red { background: #ff5f56; }
  .code-dot.yellow { background: #ffbd2e; }
  .code-dot.green { background: #27ca40; }

  .code-title {
    margin-left: var(--space-3);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .code-body {
    padding: var(--space-5);
    overflow-x: auto;
  }

  .code-body pre {
    margin: 0;
    font-family: var(--font-mono);
    font-size: var(--text-sm);
    line-height: 1.7;
  }

  .code-body code {
    color: var(--color-text-secondary);
  }

  .code-keyword { color: #c678dd; }
  .code-var { color: #e5c07b; }
  .code-prop { color: #e06c75; }
  .code-string { color: #98c379; }
  .code-func { color: #61afef; }

  @media (max-width: 900px) {
    .ndi-wrapper {
      grid-template-columns: 1fr;
      gap: var(--space-10);
    }

    .ndi-features {
      grid-template-columns: 1fr;
    }

    .ndi-visual {
      order: -1;
    }

    .visual-card {
      max-width: 100%;
    }
  }
</style>
