---
import HeroBackground from '../../design/src/components/HeroBackground.astro';
import Badge from '../../design/src/components/Badge.astro';
---

<section class="hero">
  <HeroBackground />

  <div class="hero-content container">
    <Badge text="Depuis 1993" variant="hero" showDot animated />

    <h1 class="hero-title">
      <span class="title-line">Association</span>
      <span class="title-line gradient-text">d'Informatique</span>
      <span class="title-line">d'Évry</span>
    </h1>

    <p class="hero-description">
      La communauté des étudiants en informatique de l'Université d'Évry Val-d'Essonne.
      Ressources, entraide et événements pour réussir ensemble.
    </p>

    <div class="hero-actions">
      <a href="#rejoindre" class="btn btn-primary btn-lg">
        Devenir membre
      </a>
      <a href="#a-propos" class="btn btn-secondary btn-lg">
        En savoir plus
      </a>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding-top: 80px;
  }

  /* Content */
  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  /* Title */
  .hero-title {
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: 700;
    line-height: 1.05;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-6);
  }

  .title-line {
    display: block;
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  .title-line:nth-child(1) { animation-delay: 100ms; }
  .title-line:nth-child(2) { animation-delay: 200ms; }
  .title-line:nth-child(3) { animation-delay: 300ms; }

  /* Description */
  .hero-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 540px;
    margin-bottom: var(--space-10);
    opacity: 0;
    animation: fadeInUp 0.6s ease 400ms forwards;
  }

  /* Actions */
  .hero-actions {
    display: flex;
    gap: var(--space-4);
    flex-wrap: wrap;
    justify-content: center;
    opacity: 0;
    animation: fadeInUp 0.6s ease 500ms forwards;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero {
      padding-top: 100px;
      min-height: auto;
      padding-bottom: var(--space-16);
    }

    .hero-description {
      font-size: var(--text-base);
      padding: 0 var(--space-4);
    }

    .hero-actions {
      flex-direction: column;
      width: 100%;
      padding: 0 var(--space-4);
    }

    .hero-actions .btn {
      width: 100%;
      justify-content: center;
    }
  }
</style>
