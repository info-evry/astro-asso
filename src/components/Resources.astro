---
const resources = [
  {
    title: 'ECAMPUS',
    description: 'Plateforme officielle de cours et ressources pédagogiques',
    href: 'https://ecampus.paris-saclay.fr',
    icon: 'book'
  },
  {
    title: 'Drive',
    description: 'Contenus partagés, annales et ressources étudiantes',
    href: 'https://info-evry.fr',
    icon: 'folder'
  },
  {
    title: 'Discord',
    description: 'Serveur de communication et d\'entraide entre étudiants',
    href: 'https://info-evry.fr',
    icon: 'chat'
  },
  {
    title: 'Telegram',
    description: 'Groupe de partage d\'informations et d\'actualités',
    href: 'https://info-evry.fr',
    icon: 'send'
  },
  {
    title: 'Info Évry',
    description: 'Portail étudiant avec emploi du temps et outils',
    href: 'https://info-evry.fr',
    icon: 'globe'
  },
  {
    title: 'Contact',
    description: 'Contacter les représentants de l\'association',
    href: 'mailto:contact@info-evry.fr',
    icon: 'mail'
  }
];

const icons: Record<string, string> = {
  book: `<path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  folder: `<path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  chat: `<path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  send: `<line x1="22" y1="2" x2="11" y2="13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><polygon points="22 2 15 22 11 13 2 9 22 2" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`,
  globe: `<circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/><line x1="2" y1="12" x2="22" y2="12" stroke="currentColor" stroke-width="2"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z" stroke="currentColor" stroke-width="2"/>`,
  mail: `<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/><polyline points="22,6 12,13 2,6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>`
};
---

<section id="ressources" class="section resources">
  <div class="container">
    <header class="section-header">
      <span class="section-label">Ressources</span>
      <h2 class="section-title">Tout ce dont vous avez besoin</h2>
      <p class="section-description">
        Accès rapide à toutes les plateformes et outils essentiels
        pour votre parcours en informatique.
      </p>
    </header>

    <div class="resources-grid">
      {resources.map((resource) => (
        <a
          href={resource.href}
          target={resource.href.startsWith('http') ? '_blank' : undefined}
          rel={resource.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          class="resource-card"
        >
          <div class="resource-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" set:html={icons[resource.icon]} />
          </div>
          <div class="resource-content">
            <h3 class="resource-title">{resource.title}</h3>
            <p class="resource-description">{resource.description}</p>
          </div>
          <div class="resource-arrow">
            <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
              <path d="M5 10H15M15 10L10 5M15 10L10 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .resources {
    position: relative;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .resource-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5) var(--space-6);
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    transition: all var(--transition-slow);
    cursor: pointer;
    text-decoration: none;
  }

  .resource-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(14, 165, 233, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(14, 165, 233, 0.15);
  }

  .resource-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(14, 165, 233, 0.1);
    border-radius: var(--radius-md);
    flex-shrink: 0;
    transition: all var(--transition-base);
    color: var(--color-primary);
  }

  .resource-card:hover .resource-icon {
    background: rgba(14, 165, 233, 0.15);
    transform: scale(1.05);
  }

  .resource-content {
    flex: 1;
    min-width: 0;
  }

  .resource-title {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .resource-description {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: var(--leading-snug);
  }

  .resource-arrow {
    color: var(--color-text-muted);
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--transition-base);
  }

  .resource-card:hover .resource-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-primary);
  }

  @media (max-width: 900px) {
    .resources-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .resources-grid {
      grid-template-columns: 1fr;
    }

    .resource-card {
      padding: var(--space-4);
    }

    .resource-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>
