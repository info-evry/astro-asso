---
import SectionHeader from '../../design/src/components/SectionHeader.astro';

const resources = [
  {
    title: 'ECAMPUS',
    description: 'Plateforme officielle de cours et ressources pédagogiques',
    href: 'https://ecampus.paris-saclay.fr',
    icon: 'book.fill'
  },
  {
    title: 'Drive',
    description: 'Contenus partagés, annales et ressources étudiantes',
    href: 'https://e.pcloud.link/publink/show?code=kZM9fuZgiv5bvrT6lbai85mEDTDGHuDqyQk',
    icon: 'folder.fill'
  },
  {
    title: 'Discord',
    description: 'Serveur de communication et d\'entraide entre étudiants',
    href: 'https://discord.gg/Vs68DHY',
    icon: 'bubble.left.fill'
  },
  {
    title: 'Telegram',
    description: 'Groupe de partage d\'informations et d\'actualités',
    href: 'https://t.me/info_evry',
    icon: 'paperplane.fill'
  }
];
---

<section id="ressources" class="section resources">
  <div class="container">
    <SectionHeader
      label="Ressources"
      title="Tout ce dont vous avez besoin"
      description="Accès rapide à toutes les plateformes et outils essentiels pour votre parcours en informatique."
    />

    <div class="resources-grid">
      {resources.map((resource) => (
        <a
          href={resource.href}
          target={resource.href.startsWith('http') ? '_blank' : undefined}
          rel={resource.href.startsWith('http') ? 'noopener noreferrer' : undefined}
          class="resource-card"
        >
          <div class="resource-icon">
            <span class="sfs sfs-xl" data-sfs={`@sfs:${resource.icon}@`} aria-hidden="true"></span>
          </div>
          <div class="resource-content">
            <h3 class="resource-title">{resource.title}</h3>
            <p class="resource-description">{resource.description}</p>
          </div>
          <div class="resource-arrow">
            <span class="sfs sfs-md" data-sfs="@sfs:chevron.right@" aria-hidden="true"></span>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .resources {
    position: relative;
  }

  .resources-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
  }

  .resource-card {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-5) var(--space-6);
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    transition: all var(--transition-slow);
    cursor: pointer;
    text-decoration: none;
  }

  .resource-card:hover {
    background: rgba(255, 255, 255, 0.04);
    border-color: rgba(0, 27, 165, 0.3);
    transform: translateY(-2px);
    box-shadow: 0 8px 30px rgba(0, 27, 165, 0.15);
  }

  .resource-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 27, 165, 0.1);
    border-radius: var(--radius-md);
    flex-shrink: 0;
    transition: all var(--transition-base);
    color: var(--color-primary);
  }

  .resource-card:hover .resource-icon {
    background: rgba(0, 27, 165, 0.15);
    transform: scale(1.05);
  }

  .resource-content {
    flex: 1;
    min-width: 0;
  }

  .resource-title {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin-bottom: var(--space-1);
  }

  .resource-description {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    line-height: var(--leading-snug);
  }

  .resource-arrow {
    color: var(--color-text-muted);
    opacity: 0;
    transform: translateX(-8px);
    transition: all var(--transition-base);
  }

  .resource-card:hover .resource-arrow {
    opacity: 1;
    transform: translateX(0);
    color: var(--color-primary);
  }

  @media (max-width: 900px) {
    .resources-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .resources-grid {
      grid-template-columns: 1fr;
    }

    .resource-card {
      padding: var(--space-4);
    }

    .resource-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>
